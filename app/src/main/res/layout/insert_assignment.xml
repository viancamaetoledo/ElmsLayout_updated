<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Assignment No."
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:id="@+id/assignment_number"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/date_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Title"
        android:textSize="18sp"
        android:id="@+id/assignment_title"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/assignment_number"
        android:background="@drawable/date_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/filePath"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/assignment_title">
        <EditText
            android:id="@+id/pathFile"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="48dp"
            android:hint="File Path"
            android:layout_marginStart="8dp"
            android:layout_weight="5"
            android:background="@drawable/date_border"/>

        <Button
            android:id="@+id/browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Browse"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/dateHolder"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/filePath">
        <EditText
            android:id="@+id/start"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="48dp"
            android:hint="Start Date"
            android:textAlignment="center"
            android:layout_weight="5"
            android:layout_marginStart="8dp"
            android:background="@drawable/date_border"/>
        <EditText
            android:id="@+id/end"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="48dp"
            android:hint="End Date"
            android:textAlignment="center"
            android:layout_weight="5"
            android:layout_marginStart="8dp"
            android:background="@drawable/date_border"/>

        <Button
            android:id="@+id/saveDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Save"
            />

    </LinearLayout>




</RelativeLayout>